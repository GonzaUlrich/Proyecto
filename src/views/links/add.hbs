  .cut {
    background-color: #15172b;
    border-radius: 10px;
    height: 20px;
    left: 20px;
    position: absolute;
    top: -20px;
    transform: translateY(0);
    transition: transform 200ms;
    width: 65px;
  }

  .cut-short {
    width: 80px;
  }

  .input:focus~.cut,
  .input:not(:placeholder-shown)~.cut {
