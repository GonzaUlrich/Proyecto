  <div id="myModal" class="modal">
    <!-- Modal content -->
    <div class="modal-content">
      <span class="close">&times;</span>
      <div class="video-wrap">
        <video id="video" playsinline autoplay></video>
    </div>
    <div class="controller">
        <button id="snap">Capture</button>
    </div>
    <canvas id="canvas" width="640" height="480"></canvas>
    <script>
        'use strict';

        const video = document.getElementById("video");
        const canvas = document.getElementById("canvas");
        const snap = document.getElementById("snap");
        const errorMsgElement = document.getElementById("span#MsgElement");

        const constraints = {
            video:{
                width: 640 , height:480
            }
        };

        async function init(){
            try{
                const stream= await navigator.mediaDevices.getUserMedia(constraints);
                handleSuccess(stream);
            }
            catch(e){
                errorMsgElement.innerHTML = `navigator.getUserMedia.error:${e.toString()}`;
            }
        }

        function handleSuccess(stream){
            window.stream= stream;
            video.srcObject=stream;
        }

        init();

        var context = canvas.getContext('2d');
        snap.addEventListener("click",function(){
            var placeholderImg = document.getElementById("placeholderImg");
            placeholderImg.src = URL.createObjectURL(context);

        })
    </script>
    </div>

  </div>
  <input class="submit" type="button" onclick="myFunction()" value="Submit form">

</div>





<script>
  var changeImg = false;
  function validationCheck(variableName, idname) {
    if (variableName === '' || variableName === ' ')
      return document.getElementById(idname).style.color = 'red';
  }

  function resetColor(resetName) {
    document.getElementById(resetName).style.color = '#65657b';
  }

  file.onchange = evt => {
    changeImg = true;
    var placeholderImg = document.getElementById("placeholderImg");
    document.getElementsByClassName("uploadImage")[0].style.color = '#a9a9b6'
    const [imgfile] = file.files;
    document.getElementById("uploadImage").innerHTML = [imgfile.name];
    if (imgfile) {
      placeholderImg.src = URL.createObjectURL(imgfile)
    }
  }

// Get the modal
var modal = document.getElementById("myModal");

// Get the button that opens the modal
var btn = document.getElementById("myBtn");

// Get the <span> element that closes the modal
var span = document.getElementsByClassName("close")[0];

// When the user clicks the button, open the modal 
btn.onclick = function() {
  modal.style.display = "block";
}

// When the user clicks on <span> (x), close the modal
span.onclick = function() {
  modal.style.display = "none";
}

// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
  if (event.target == modal) {
    modal.style.display = "none";
  }
}

  function myFunction() {
    //Chequeo form1
    let myFormName = document.forms["myForm"]["tempfname"].value;
    validationCheck(myFormName, "placeeholderName");
    let myFormLastname = document.forms["myForm"]["templastname"].value;
    validationCheck(myFormLastname, "placeeholderLastname");
    let description = document.forms["myForm"]["description"].value;
    validationCheck(description, "placeeholderDescription");

    //Chequeo form2
    if (!changeImg) {
      return document.getElementsByClassName("uploadImage")[0].style.color = 'red';
    }



